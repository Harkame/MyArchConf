# Resolution
exec xrandr --newmode "1920x1080_59.00"  173.00  1920 2048 2248 2576  1080 1083 1088 1120 -hsync +vsync; xrandr --addmode Virtual-1 1920x1080_59.00; xrandr --output Virtual-1 --mode 1920x1080_59.00;

# Wallpapers
exec sh -c 'sleep 0.3'; feh --bg-scale '/home/harkame/Wallpapers/skadi.jpg'

# Terminal en mode Demon
exec sh -c 'sleep 0.4'; urxvtd -q -o -f
exec sh -c 'sleep 0.4'; urxvtd -q -o -f
exec sh -c 'sleep 0.4'; urxvtd -q -o -f

# Terminal
exec exec sh -c 'sleep 0.5'; urxvtc

for_window [class="^.*"] border pixel 1


gaps inner 5
gaps outer 5
smart_gaps on
